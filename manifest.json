{
  "manifest_version": 3,
  "name": "Omnibar",
  "version": "1.1.0",
  "description": "Spotlight-like command palette for tabs, history, and web search.",
  "permissions": ["tabs", "history"],
  "host_permissions": ["<all_urls>"],
  "commands": {
    "open-omnibar": {
      "suggested_key": { "default": "Ctrl+K", "mac": "Command+K" },
      "description": "Open Omnibar"
    }
  },
  "background": { "service_worker": "background.js", "type": "module" },
  "content_scripts": [{
    "js": ["content.js"],
    "css": ["omnibar.css"],
    "matches": ["<all_urls>"],
    "run_at": "document_idle"
  }],
  "web_accessible_resources": [{
    "resources": ["vendor/*"],
    "matches": ["<all_urls>"]
  }],
  "icons": { "48": "images/icon-48.png", "96": "images/icon-96.png", "128": "images/icon-128.png" }
}
